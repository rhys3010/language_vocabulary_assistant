<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>

    <!-- Base Activity Theme -->
    <style name="ActivityTheme">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Button Theme -->
    <style name="ButtonTheme" parent="android:Widget.Material.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Custom Spinner Theme -->
    <style name="SpinnerTheme">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <!-- Get Custom Spinner Background as Drawable -->
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <!-- Custom Spinner Item Theme -->
    <style name="SpinnerItemTheme" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Custom Text Input Theme -->
    <style name="TextInputTheme">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:completionThreshold">1</item>
    </style>

    <!-- Custom Dialog Style -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonTheme</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonTheme</item>
    </style>

    <style name="NegativeButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="PositiveButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Practice Score Themes -->
    <style name="PracticeScoreHeadingTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="PracticeScoreContentTheme">
        <item name="android:textSize">42sp</item>
    </style>

    <!-- Custom RecyclerView Item -->
    <style name="RecyclerViewItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/recycler_view_item_start_padding</item>
        <item name="android:paddingEnd">@dimen/recycler_view_item_end_padding</item>
        <item name="android:paddingTop">@dimen/recycler_view_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/recycler_view_item_vertical_padding</item>
    </style>

</resources>
